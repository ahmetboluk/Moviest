<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment"
    android:clickable="true"
    android:background="@color/colorPrimary"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_movie_jpeg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_1"
                android:layout_weight="7"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_movie_jpeg"
                android:layout_margin="5dp"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/tv_movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Star Wars"
                    android:textColor="@color/textColorPrimary"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_movie_title">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/layout_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                            android:id="@+id/ll_movie_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            >
                            <ImageView
                                android:id="@+id/im_movie_date_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/date_icon"
                                android:layout_margin="5dp"
                                />
                            <TextView
                                android:id="@+id/tv_movie_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2018"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="10dp"
                                />
                        </LinearLayout>
                            <LinearLayout
                            android:id="@+id/ll_movie_minute"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/im_movie_minute_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/movie_minute"
                                android:layout_margin="5dp"
                                />
                            <TextView
                                android:id="@+id/tv_movie_minute"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="128 min"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="10dp"

                                />
                        </LinearLayout>
                            <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <ImageView

                                android:id="@+id/im_movie_genre_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/movie_genre"
                                android:layout_margin="5dp"
                                />
                            <TextView
                                android:id="@+id/tv_movie_genre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Action, Adventure"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="10dp"
                                />
                        </LinearLayout>
                            <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <ImageView

                                android:id="@+id/im_movie_nation_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/usa_jpeg"
                                android:layout_margin="5dp"
                                />
                            <TextView
                                android:id="@+id/tv_movie_nation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="USA"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="10dp"

                                />
                        </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_movie_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@color/colorAccent"
                            android:padding="14dp"
                            android:text="7.3"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="20dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/ll_layout_1">
            <TextView
                android:id="@+id/tv_overwiew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rey develops her newly discovered abilities with the guidance of Luke Skywalker, who is unsettled by the strength of her powers. Meanwhile, the Resistance prepares to do battle with the First Order."
                android:textColor="@color/textColorPrimary"
                android:textSize="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_layout_3"
            android:layout_below="@+id/ll_layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Casting"
                android:textColor="@color/colorAccent"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_credits"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_layout_4"
            android:layout_below="@+id/ll_layout_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Similar Movie"
                android:textColor="@color/colorAccent"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_similar_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>



</ScrollView>